<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/moviedb_green">

        <TextView
            android:id="@+id/text_popup_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MOVIE DB"
            android:textColor="@color/md_white_1000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Movie?"
            android:textColor="@color/md_black_1000"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:id="@+id/text_popup_body"
            />
        <Button
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:id="@+id/button_popup_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/moviedb_green"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="LOGIN"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp" />
        <Button
            android:layout_marginBottom="30dp"
            android:id="@+id/button_popup_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@color/md_red_500"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Cancel"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>